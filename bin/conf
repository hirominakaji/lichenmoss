contents="lichenmoss_contents"	# 記事リポジトリの名前
contents_owner="hirominakaji"	# 記事リポジトリの持ち主のユーザ名
wwwdir="/var/www"		# 記事リポジトリやlichenmossを置くディレクトリ
contentsdir="$wwwdir/$contents" # 記事リポジトリのパス
appdir="$wwwdir/lichenmoss"	# lichenmossをインストールするパス
viewdir="$appdir/view"
logdir="/var/log/$contents"
datadir="${contentsdir}_data"
export LANG=ja_JP.UTF-8
